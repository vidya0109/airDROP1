<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161625"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="#161625">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="162dp"
                android:layout_height="65dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="335dp"
                app:srcCompat="@drawable/dead" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="137dp"
                android:layout_height="70dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="335dp"
                app:srcCompat="@drawable/reco" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="118dp"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="335dp"
                app:srcCompat="@drawable/active3" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:background="#161625"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/app9" />

            <LinearLayout
                android:id="@+id/linear0"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="500dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="500dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="500dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="500dp"
                android:orientation="vertical">

            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="#151D33"
                app:itemBackground="@color/cardview_shadow_start_color"
                app:itemIconTint="@drawable/selector"
                app:itemTextColor="@drawable/selector"
                app:menu="@menu/menu_navigation" />

            <TextView
                android:id="@+id/active"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="280dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#F70739"
                android:textColorHighlight="#F44336"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reco"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="280dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#28A444"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dead"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="280dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#6A737B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalactive2"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="430dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#F70739"
                android:textColorHighlight="#F44336"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalreco"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="430dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#28A444"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totaldead"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="430dp"
                android:background="#161625"
                android:gravity="center"
                android:textColor="#6A737B"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>